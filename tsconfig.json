{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node16",
    "outDir": "build",
    "target": "ES2021",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
	},
  "include": ["source/"],
	"exclude": ["node_modules", ".git", "package.json"],
	"typeAcquisition": { "enable": true }
}
